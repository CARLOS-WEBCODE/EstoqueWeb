@*Definindo a classe de modelo de dados utilizada neste página*@
@model EstoqueWeb.Presentation.Models.ProdutoCadastroViewModel

<h5>Cadastro de Produto</h5>
<p>
    Preencha os campos para cadastro um produto no estoque.
</p>
<hr />

@*Declarando o formulário*@
@using (Html.BeginForm())
{
    <div class="row mb-3">
        <div class="col-md-6">
            <label>Nome do produto:</label>
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </span>
        </div>
        <div class="col-md-3">
            <label>Preço do produto:</label>
            @Html.TextBoxFor(model => model.Preco, new { @type = "decimal", @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Preco)
            </span>
        </div>
        <div class="col-md-3">
            <label>Quantidade do produto:</label>
            @Html.TextBoxFor(model => model.Quantidade, new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Quantidade)
            </span>
        </div>
        <div class="col-md-3">
            <label>Data de validade do produto:</label>
            @Html.TextBoxFor(model => model.Data, new { @type = "date", @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Data)
            </span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <label>Descrição do produto:</label>
            @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.Descricao)
            </span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <input type="submit" value="Realizar Cadastro" class="btn btn-success" />
        </div>
    </div>

    <h5>
        @TempData["Mensagem"]
    </h5>
}